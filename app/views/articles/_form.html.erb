	<div class="container">
	<div class="row justify-content-center ">
		<div class="col-10">
		<%= render 'shared/errors', obj: @article%>
		<%= form_with(model: @article,class:"shadow p-3 mb-3 bg-primary rounded", data: { turbo: false }, local: true) do |f| %>
		<div class="input-group row mb-3">
				<%= f.label :title, class: "col-2 col-form-label text-light" %> 
			<div class="col-10">
				<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
			</div>
		</div>
		
		<div class="input-group row">
			<%= f.label :description, class: "col-2 col-form-label text-light" %>
			<div class="col-10">
			<%= f.text_area :description, rows: 10, class: "form-control shadow rounded mb-3", placeholder: "Title of article"%>
			</div>
		</div>

		<div class="input-group justify-content-center mb-3">
			<%= f.submit class: "btn btn-outline-warning btn-lg" %>
		</div>
		<% end %>
		</div>
			<div class="mb-3">
			<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "d-flex justify-content-center mb-3 text-success" %>
		</div>
	</div>
</div>