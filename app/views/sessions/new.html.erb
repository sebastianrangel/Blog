<h1 class="text-center mt-4 text-black", id="titulo3">Log in</h1>

	<div class="container mb-5" id="formu" >
	<div class="row justify-content-center " >
		<div class="col-10" >
		<%= form_with(scope: :session, url: login_path, class:"shadow p-3 mb-3 rounded", data: { turbo: false }, local: true) do |f| %>
		
		<div class="input-group row">
			<%= f.label :email, class: "col-2 col-form-label text-light" %>
			<div class="col-10">
			<%= f.email_field :email, class: "form-control shadow rounded mb-3", placeholder: "Enter your email address "%>
			</div>
		</div>

        <div class="input-group row">
			<%= f.label :password, class: "col-2 col-form-label text-light" %>
			<div class="col-10">
			<%= f.password_field :password, class: "form-control shadow rounded mb-3", placeholder: "Enter your password "%>
			</div>
		</div>

		<div class="input-group justify-content-center mb-3">
			<%= f.submit "Log in",  class: "btn btn-outline-warning btn-lg" %>
		</div>
		<% end %>
		</div>
			<div class="mb-3">
			<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "d-flex justify-content-center mb-3 text-success" %>
		</div>
	</div>
</div>